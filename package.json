{
  "name": "facebook-auto-liker",
  "version": "1.0.0",
  "description": "Real Facebook auto-liker system",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm install",
    "postinstall": "echo 'Skipping Puppeteer Chrome download'"
  },
  "engines": {
    "node": "20.x",
    "npm": ">=9.0.0"
  },
  "config": {
    "puppeteer_skip_chromium_download": "true"
  },
  "env": {
    "PUPPETEER_SKIP_DOWNLOAD": "true"
  },
  "puppeteer": {
    "skip_download": "true"
  },
  "buildpacks": [
    {
      "url": "https://github.com/jontewks/puppeteer-heroku-buildpack"
    },
    {
      "url": "heroku/nodejs"
    }
  ],
  "dependencies": {
    "cluster": "^0.7.7",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.0",
    "helmet": "^8.1.0",
    "mongoose": "^8.18.0",
    "puppeteer": "^24.18.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.0"
  }
}
